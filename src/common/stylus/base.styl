body, html
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  height: 100%
  font-size: 14px
  user-select: none
  -webkit-tap-highlight-color: transparent

div
	box-sizing: border-box

input
  width: 100%
  outline: none
  padding: 10px 0
  box-sizing: border-box

::-webkit-scrollbar
  display: none